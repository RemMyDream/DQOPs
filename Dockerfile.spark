# Custom Spark image with Python packages
FROM apache/spark:3.5.3

# Switch to root to install packages
USER root

# Install Python packages required for the project
RUN pip install --no-cache-dir \
    gdelt \
    pandas-datareader \
    beautifulsoup4 \
    requests \
    python-dotenv \
    lxml

# Switch back to spark user
USER spark

# Metadata
LABEL maintainer="Your Name"
LABEL description="Custom Spark image with pre-installed Python packages for BDSP project"
